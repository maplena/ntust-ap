<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/constraintlayout_style1">

    <TextView
        android:id="@+id/EndEventNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="台科開學典禮"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/EndEventScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style6"
        android:minHeight="0dp"
        android:paddingVertical="2dp"
        android:text="活動評分"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/EndEventCreatorTextView"
        app:layout_constraintEnd_toEndOf="@+id/EndEventTag2TextView"
        app:layout_constraintTop_toTopOf="@+id/EndEventCreatorTextView" />

    <TextView
        android:id="@+id/EndEventCreatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="台科校務會議"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EndEventNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />




    <TextView
        android:id="@+id/EndEventTag2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#台科"
        android:textColor="#FF0000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/EndEventTag1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#校務"
        android:textColor="#662BE2"
        android:textSize="12sp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="@id/EndEventTag2TextView"
        app:layout_constraintBottom_toBottomOf="@id/EndEventTag2TextView"
        app:layout_constraintEnd_toStartOf="@+id/EndEventTag2TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>