<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/constraintlayout_style1">


    <TextView
        android:id="@+id/EndQuestionListNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="台科專題問卷"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/EndQuestionListNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EndQuestionListNameTextView">

        <TextView
            android:id="@+id/f521surveypeoplelimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#抽獎"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/EndQuestionListTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2分鐘"
            android:textColor="#0000FF"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/EndQuestionListLimitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#限男"
            android:textColor="#909090"
            android:textSize="12sp" />


    </LinearLayout>

    <Button
        android:id="@+id/EndQuestionListCheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style15"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="填寫列表"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />


    <TextView
        android:id="@+id/EndQuestionListCreatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="B10800000/張三"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EndQuestionListNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>