<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/constraintlayout_style1">

    <ImageView
        android:id="@+id/EventApplicantImageImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/imageview_style3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EventApplicantTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/edittext_style3"
        android:paddingHorizontal="8dp"
        android:text="B10900000/加號"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EventApplicantImageImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style3"
        android:orientation="horizontal"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/EventApplicantImageImageView"
        app:layout_constraintStart_toStartOf="@+id/EventApplicantTextView"
        app:layout_constraintTop_toBottomOf="@+id/EventApplicantTextView">

        <TextView
            android:id="@+id/EventApplicantTag1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#台科"
            android:textColor="#0000FF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/EventApplicantTag2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#資管"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/EventApplicantTag3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#學士"
            android:textColor="#909090"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/EventApplicantTag4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#男"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/EventApplicantDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_style6"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="詳細"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_style3"
        android:foreground="@drawable/message_black"
        app:layout_constraintBottom_toTopOf="@id/imageButton2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_style3"
        android:foreground="@drawable/add_friend_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/imageButton1" />
</androidx.constraintlayout.widget.ConstraintLayout>